<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <MenuItem x:Key="FileMenu" Header="File">
        <MenuItem Header="Open file..." InputGestureText="Ctrl+O" />
        <MenuItem Header="Open new window" InputGestureText="Ctrl+N" />
        <MenuItem Header="Save" InputGestureText="Ctrl+S" />
        <MenuItem Header="Save as..." InputGestureText="Ctrl+Shift+S" />
        <Separator />
        <MenuItem Header="Open with..." InputGestureText="D" />
        <MenuItem Header="Edit image ..." InputGestureText="E" />
        <MenuItem Header="Print..." InputGestureText="Ctrl+P" />
        <MenuItem Header="Share..." InputGestureText="S" />
        <Separator />
        <MenuItem Header="Refresh" InputGestureText="R" />
        <MenuItem Header="Reload image" InputGestureText="Ctrl+R" />
        <MenuItem Header="Reload image list" InputGestureText="Ctrl+Shift+R" />
        <MenuItem Header="Unload image" InputGestureText="U" />
        <MenuItem Header="Exit" InputGestureText="Esc / Ctrl+W" />

    </MenuItem>


</ResourceDictionary>